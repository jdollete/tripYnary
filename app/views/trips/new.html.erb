
<div class="title-div">
  <p><h2 class="text-title">Create A New Trip!</h2></p>
</div>

<div class="container div_bg">
  <form class="col s12" action="/trips" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <label for="title">Trip Title:</label>
    <input type="text" class="form-control form_s500" placeholder="" name="trip[title]">

    <label for="description">Description:</label>
    <input type="text" class="form-control form_s500" placeholder="" name="trip[description]">

    <div class="">
      <div class="f_left">
        <label for="address">Street Address:</label>
        <input type="text" class="form-control form_s250" placeholder="" name="trip[address]">
      </div>
      <div class="f_left">
        <label for="country">Country:</label>
        <input type="text" class="form-control form_s250" placeholder="" name="trip[country]">
      </div>
    </div>

  </form>
</div>
